@model IEnumerable<TradeTrack2.Models.ProductViewModel>

<h1>Products</h1>
<button class="btn btn-primary" id="openCreateModalBtn">Добавить</button>
<table class="table">
    <thead>
        <tr>
            <th>
                Название
            </th>
            <th>
                Описание
            </th>
            <th>
                Стоимость
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.UnitPrice
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn">Изменить</a>
                    <button class="btn btn-danger" onclick="showDeleteModal(@item.Id)">Удалить</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Контейнер для динамической загрузки модального окна -->
<div id="createModalContainer"></div>

@section Scripts {
    <script>

        $(document).ready(function () {
            // Открытие модального окна для создания продукта
            $('#openCreateModalBtn').click(function () {
                $.get('@Url.Action("LoadCreateModal", "Product")', function (data) {
                    $('#createModalContainer').html(data);
                    $('#createModal').modal('show');

                    // Теперь инициализируем скрипты для загруженного модального окна
                    initializeCreateProductForm();
                });
            });
        });

        // Функция для инициализации формы после загрузки модального окна
        function initializeCreateProductForm() {
            $('#createProductBtn').click(function () {
                var formData = $('#createProductForm').serialize();

                $.post('@Url.Action("Create", "Product")', formData, function (response) {
                    if (response.success) {
                        location.reload(); // Обновляем страницу после успешного добавления
                    } else {
                        // Обработка ошибок
                        alert(response.errorMessage);
                    }
                });
            });
        }

        var deleteProductId = 0;

        function showDeleteModal(id) {
            deleteProductId = id;
            $('#deleteModal').modal('show');
        }

        $('#confirmDeleteBtn').click(function () {
            $.post('@Url.Action("DeleteConfirmed", "Product")', { id: deleteProductId }, function (response) {
                if (response.success) {
                    location.reload();
                } else {
                    $('#deleteModal').modal('hide');
                    $('#errorModalBody').text(response.errorMessage);
                    $('#errorModal').modal('show');
                }
            });
        });
    </script>
}
